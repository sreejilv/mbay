                                                </div>
                                                </p>
                                            </div>
                                        </div>

                                        {% include('layout/header.twig')%}
                                        <body class="login">
                                            <input type="hidden" name="path" id="path" value="{{BASE_URL}}"/>
                                            {%include('admin/layout/notification.twig')%}
                                        {% endif %}


                                        <div id="js_messages" style="display: none;">
                                            <span id="invalid_sponsor_js">{{lang('invalid_sponsor_js')}}</span>
                                            <span id="sponsor_req_js">{{lang('sponsor_req_js')}}</span>
                                            <span id="invalid_username_js">{{lang('invalid_username_js')}}</span>
                                            <span id="min_4_js">{{lang('min_4_js')}}</span>
                                            <span id="username_req_js">{{lang('username_req_js')}}</span>
                                            <span id="invalid_email_js">{{lang('invalid_email_js')}}</span>
                                            <span id="email_req_js">{{lang('email_req_js')}}</span>
                                            <span id="enter_valid_email_js">{{lang('enter_valid_email_js')}}</span>
                                            <span id="min_6_js">{{lang('min_6_js')}}</span>
                                            <span id="min_2_js">{{lang('min_2_js')}}</span>
                                            <span id="password_req_js">{{lang('password_req_js')}}</span>
                                            <span id="password_mismatch_js">{{lang('password_mismatch_js')}}</span>
                                            <span id="first_name_req_js">{{lang('first_name_req_js')}}</span>
                                            <span id="agree_req_js">{{lang('agree_req_js')}}</span>
                                            <span id="register_leg_req_js">{{lang('register_leg_req_js')}}</span>
                                            <span id="country_req_js">{{lang('country_req_js')}}</span>
                                            <span id="privacy_policy_req_js">{{lang('privacy_policy_req_js')}}</span>

                                            <span id="msg">{{lang('please_enter_epin_details')}}</span>
                                            <span  id="msg2" >{{lang('error_insufficent_pin_amount')}}</span>
                                            <span  id="epin_created_by_user" >{{lang('epin_created_by_user')}}</span>
                                            <span  id="msg3" >{{lang('invalid_epin_details')}}</span>
                                            <span id="success_message">{{lang('success_message')}}</span>
                                            <span id="error_message">{{lang('you_have_some_errors_please_check_below')}}</span>
                                            <span id="error_same_epin_entered">{{lang('same_epin_entered')}}</span>
                                            <span id="alphanumeric_js">{{lang('alphanumeric_js')}}</span>
                                            <span id="fullname_js">{{lang('fullname_js')}}</span>
                                            <span id="email_js">{{lang('email_js')}}</span>
                                            <span id="passwaord_validation_js">{{lang('passwaord_validation_js')}}</span>

                                            <input type="hidden" id="currency_symbol" value="({{MLM_CURRENCY_LEFT~MLM_CURRENCY_RIGHT}})"/>

                                        </div>



                                        {{ form_open('', ' id="single_step_form" name="single_step_form"')|raw }}

                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="errorHandler alert alert-danger no-display">
                                                    <i class="fa fa-remove-sign"></i> {{ lang('form_error_msg') }}
                                                </div>
                                            </div>
                                            <div class="col-md-6">

                                                <div class="form-group">
                                                    <label class="control-label">
                                                        {{ lang('sponser_name') }}: <span class="symbol required"></span>
                                                    </label>
                                                    <div class="input-group">
                                                        <span class="input-group-addon"> <i class="fa fa-user-plus"></i> </span>
                                                        <input type="text" class="form-control" name="sponser_name" id="sponser_name" value="{{ register_data.sponser_name }}" placeholder="{{ lang('sponser_name') }}" maxlength="18" tabindex='1'>
                                                    </div>


                                                    {% if register_error.sponser_name is defined %}<code> {{ register_error.sponser_name}} </code> {% endif %}
                                                </div>

                                                <div  id="full_name">
                                                </div>

                                                {% if placement_username %}
                                                    <div class="form-group">
                                                        <label class="control-label">
                                                            {{ lang('placement_user') }}: <span class="symbol required"></span>
                                                        </label>
                                                        <div class="input-group">
                                                            <span class="input-group-addon"> <i class="fa fa-user-plus"></i> </span>
                                                            <input type="text" class="form-control" name="placement_user" id="placement_user" value="{{ placement_username }}" placeholder="{{ lang('placement_user') }}" maxlength="18" tabindex='2' readonly>
                                                        </div>


                                                        {% if register_error.placement_user is defined %}<code> {{ register_error.placement_user}} </code> {% endif %}
                                                    </div>
                                                {% endif %}


                                                {% if leg_status %}
                                                    <div class="form-group">
                                                        <label class="control-label">
                                                            {{ lang('register_leg')}}: <span class="symbol required"></span>
                                                        </label>
                                                        <div class="input-group">
                                                            <span class="input-group-addon"> <i class="fa fa-sitemap"></i> </span>
                                                            <select class="form-control search-select" id="register_leg" name="register_leg" tabindex='2'>
                                                                <option value="">{{ lang('select_a_register_leg')}}</option>
                                                                <option value="L" {% if register_data.register_leg=='L' %} selected {% endif %}>{{lang('left')}}</option>
                                                                <option value="R" {% if register_data.register_leg=='R' %} selected {% endif %}>{{lang('right')}}</option>

                                                            </select>
                                                        </div>
                                                        {% if register_error.register_leg is defined %}<code> {{ register_error.register_leg}} </code> {% endif %}
                                                    </div>

                                                {% endif %}

                                                {% if username_type=="static" %}
                                                    <div class="form-group">
                                                        <label class="control-label">
                                                            {{ lang('username') }}: <span class="symbol required"></span>
                                                        </label>
                                                        <span class="input-icon">
                                                            <div class="input-group">
                                                                <span class="input-group-addon"> <i class="fa fa-user"></i> </span>
                                                                <input type="text" class="form-control" name="username" id="username" value="{{ register_data.username }}" placeholder="{{ lang('username') }}" maxlength="10" tabindex='3'>
                                                            </div>
                                                        </span>


                                                        {% if register_error.username is defined %}<code> {{ register_error.username}}</code> {% endif %}
                                                    </div>
                                                {% endif %}


                                                <div class="form-group">
                                                    <label class="control-label">
                                                        {{ lang('password') }}: <span class="symbol required"></span>
                                                    </label>
                                                    <span class="input-icon">
                                                        <div class="input-group">
                                                            <span class="input-group-addon"> <i class="fa fa-lock"></i> </span>
                                                            <input type="password" class="form-control" name="password" id="password" placeholder="{{ lang('password') }}" tabindex='4'>
                                                        </div>
                                                    </span>


                                                    {% if register_error.password is defined %}<code> {{ register_error.password}}</code> {% endif %}
                                                </div>

                                                <div class="form-group">
                                                    <label class="control-label">
                                                        {{ lang('confirm_password') }} : <span class="symbol required"></span>
                                                    </label>
                                                    <span class="input-icon">
                                                        <div class="input-group">
                                                            <span class="input-group-addon"> <i class="fa fa-lock"></i> </span>
                                                            <input type="password" class="form-control" name="confirm_password" id="confirm_password" placeholder="{{ lang('confirm_password') }} " tabindex='5'>
                                                        </div>
                                                    </span>


                                                    {% if register_error.confirm_password is defined %}<code> {{ register_error.confirm_password}}</code> {% endif %}
                                                </div>
                                                {% if leg_status %}
                                                </div>
                                                <div class="col-md-6">
                                                {% endif %}

                                                <div class="form-group">
                                                    <label class="control-label">
                                                        {{ lang('email') }}: <span class="symbol required"></span>
                                                    </label>
                                                    <span class="input-icon">
                                                        <div class="input-group">
                                                            <span class="input-group-addon"> <i class="fa fa-envelope"></i> </span>
                                                            <input type="email" class="form-control" name="email" id="email" tabindex='6' value="{{ register_data.email }}" placeholder="{{ lang('email') }}">
                                                        </div>
                                                    </span>


                                                    {% if register_error.email is defined %}<code> {{ register_error.email}}</code> {% endif %}
                                                </div>

                                                {% if not leg_status %}
                                                </div>
                                                <div class="col-md-6">
                                                {% endif %}
                                                <div class="form-group">
                                                    <label class="control-label">
                                                        {{ lang('first_name') }}: <span class="symbol required"></span>
                                                    </label>
                                                    <span class="input-icon">
                                                        <div class="input-group">
                                                            <span class="input-group-addon"> <i class="fa fa-text-width"></i> </span>
                                                            <input type="text" class="form-control" name="first_name" id="first_name" value="{{ register_data.first_name }}" placeholder="{{ lang('first_name') }}" maxlength="15" tabindex='7' style="text-transform: capitalize;">
                                                        </div>
                                                    </span>

                                                    {% if register_error.first_name is defined %}<code> {{ register_error.first_name}}</code> {% endif %}
                                                </div>


                                                <div class="form-group">
                                                    <label class="control-label">
                                                        {{ lang('last_name') }}:
                                                    </label>
                                                    <span class="input-icon">
                                                        <div class="input-group">
                                                            <span class="input-group-addon"> <i class="fa fa-text-width"></i> </span>
                                                            <input type="text" class="form-control" name="last_name" id="last_name" value="{{ register_data.last_name }}" placeholder="{{ lang('last_name') }}" maxlength="15" tabindex='8' style="text-transform: capitalize;">
                                                        </div>
                                                    </span>

                                                    {% if register_error.last_name is defined %}<code> {{ register_error.last_name}}</code> {% endif %}
                                                </div>


                                                <div class="form-group">
                                                    <label class="control-label">
                                                        {{ lang('country')}}: <span class="symbol required"></span>
                                                    </label>
                                                    <div class="input-group">
                                                        <span class="input-group-addon"><i class="fa fa-globe"></i></span>
                                                        <select class="form-control search-select" id="country" name="country" tabindex='9'>
                                                            <option value="">{{ lang('select_a_country')}}</option>
                                                            {% for cntrs in countries %}
                                                                <option value="{{cntrs.id}}" {% if register_data.country==cntrs.id %} selected {% endif %}>{{cntrs.name|raw}}</option>
                                                            {% endfor %}
                                                        </select>
                                                    </div>
                                                    {% if register_error.country is defined %}<code> {{ register_error.country}} </code> {% endif %}
                                                </div>


                                                <div class="form-group">
                                                    <label class="control-label">
                                                        {{ lang('state')}}:
                                                    </label>
                                                    <div class="input-group">
                                                        <span class="input-group-addon"><i class="fa fa-flag-o" area-hidden="true"></i></span>
                                                        <span id="state_span">

                                                            <select class="form-control search-select" id="state" name="state" tabindex='10'>
                                                                <option value="">{{ lang('select_a_state')}}</option>
                                                                {% for sts in states %}
                                                                    <option value="{{sts.id}}" {% if register_data.state==sts.id %} selected {% endif %}>{{sts.name|raw}}</option>
                                                                {% endfor %}
                                                            </select>
                                                        </span>
                                                    </div>
                                                    {% if register_error.state is defined %}<code> {{ register_error.state}} </code> {% endif %}
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div>
                                                <label for="privacy_policy" class="checkbox-inline">
                                                    <input type="checkbox" class="grey agree" id="privacy_policy" name="privacy_policy" {% if register_data.agree %} checked {% endif %} tabindex='11'>
                                                </label>
                                                <a href="#" data-toggle="modal" data-target="#privacy_modal">{{ lang('agree_to_the_privacy_policy') }}</a>
                                            </div>
                                            {% if register_error.agree is defined %}<code> {{ register_error.agree}}</code> {% endif %}
                                        </div>




                                        <h4 align='center'>{{lang('payment_methods')}}</h4>

                                        <input type="hidden" name="reg_amount" id="reg_amount" value="{{ total_amount }}">
                                        {% if entry_fee>0 %}
                                            <p align='center'><b>{{lang('register_fee')}}: {{MLM_CURRENCY_LEFT}} {{(entry_fee*MLM_CURRENCY_VALUE)|round(CURRENCY_ROUND, 'floor')}} {{MLM_CURRENCY_RIGHT}}</b></p>
                                        {% endif %}

                                        {% if pro_amount>0 %}
                                            <p align='center'><b>{{lang('pro_amount')}}: {{MLM_CURRENCY_LEFT}} {{(pro_amount*MLM_CURRENCY_VALUE)|round(CURRENCY_ROUND, 'floor')}} {{MLM_CURRENCY_RIGHT}}</b></p>
                                        {% endif %}

                                        {% if delivery_charge>0 %}
                                            <p align='center'><b>{{lang('delivery_charge')}}: {{MLM_CURRENCY_LEFT}} {{(delivery_charge*MLM_CURRENCY_VALUE)|round(CURRENCY_ROUND, 'floor')}} {{MLM_CURRENCY_RIGHT}} </b></p>
                                        {% endif %}

                                        {% if shipping_charge>0 %}
                                            <p align='center'><b>{{lang('shipping_charge')}}: {{MLM_CURRENCY_LEFT}} {{(shipping_charge*MLM_CURRENCY_VALUE)|round(CURRENCY_ROUND, 'floor')}} {{MLM_CURRENCY_RIGHT}} </b></p>
                                        {% endif %}

                                        {% if tax>0 %}
                                            <p align='center'><b>{{lang('tax')}}: {{MLM_CURRENCY_LEFT}} {{(tax*MLM_CURRENCY_VALUE)|round(CURRENCY_ROUND, 'floor')}} {{MLM_CURRENCY_RIGHT}} </b></p>
                                        {% endif %}

                                        {% if total_amount>0 %}
                                            <p align='center'><b>{{lang('total_amount')}}: {{MLM_CURRENCY_LEFT}} {{(total_amount*MLM_CURRENCY_VALUE)|round(CURRENCY_ROUND, 'floor')}} {{MLM_CURRENCY_RIGHT}}</b></p>
                                        {% endif %}

                                        <div class="form-group">
                                            <div>
                                                <label for="agree" class="checkbox-inline">
                                                    <input type="checkbox" class="grey agree" id="agree" name="agree" tabindex='12'>
                                                </label>
                                                <a href="#" data-toggle="modal" data-target="#term_modal">{{ lang('agree_to_the_terms_and_condition') }}</a>
                                            </div>
                                            {% if register_error.agree is defined %}<code> {{ register_error.agree}}</code> {% endif %}
                                        </div>
