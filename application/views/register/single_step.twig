                                                            <div class="col-md-6">
                                                                <ul class="list-group">
                                                                    <li class="list-group-item">
                                                                        <span class="badge">{{ company_bank_details.bank_ac_number}}</span>
                                                                        {{ lang('bank_ac_number')}}
                                                                    </li>
                                                                    <li class="list-group-item">
                                                                        <span class="badge">{{ company_bank_details.bank_name}}</span>
                                                                        {{ lang('bank_name')}}
                                                                    </li>
                                                                    <li class="list-group-item">
                                                                        <span class="badge">{{ company_bank_details.bank_holder_name}}</span>
