{% include'user/layout/header.twig' %}
<div class="row">
    <div class="panel panel-white">
        <div class="panel-heading">
            <i class="fa fa-external-link-square"></i>
            {{lang('view_faq')}}
            <div class="panel-tools">										
                <div class="dropdown">
                    <a data-toggle="dropdown" class="btn btn-xs dropdown-toggle btn-transparent-grey"><i class="fa fa-cog"></i></a>
                    <ul class="dropdown-menu dropdown-light pull-right" role="menu">
                        <li><a class="panel-collapse collapses" href="#"><i class="fa fa-angle-up"></i> <span>{{ lang('collapse') }}</span> </a></li>
                        <li><a class="panel-refresh" href="#"><i class="fa fa-refresh"></i> <span>{{ lang('refresh') }}</span></a></li>
                        <li><a class="panel-expand" href="#"><i class="fa fa-expand"></i> <span>{{ lang('full_screen') }}</span></a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="tabbable tabs-left">
                        <ul id="myTab3" class="nav nav-tabs">
                            {% for item in faq_details %}
                                <li {% if loop.index==1 %}class="active"{% else %}class=""{% endif %}>
                                    <a href="javascript:#faq_exa_{{item['department_id']}}" data-toggle="tab">
                                        <i class="fa fa-asterisk">&nbsp;<b>{{item['department_name']}}</b></i>
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                        <div class="tab-content">
                            {% for data in faq_details %}   
                                <div {% if loop.index==1 %}class="tab-pane fade in active"{% else %}class="tab-pane fade"{% endif %} id="faq_exa_{{data['department_id']}}" style="min-height:300px ">
                                    <div id="accordion" class="panel-group accordion accordion-custom accordion-teal">
                                        <h3 class="margin-bottom-15">{{data['department_name']}}</h3>
                                        <div class="panel panel-default">

                                            {% for  key, user in data['question'] %}
                                                <div class="panel-heading">
                                                    <h4 class="panel-title">
                                                        <a href="#faq_1_{{key}}" data-parent="#accordion" data-toggle="collapse" {% if loop.index==1 %}class="accordion-toggle"{% else %} class="accordion-toggle collapsed" {% endif %} aria-expanded="false">
                                                            <i class="icon-arrow"></i>{{user}}
                                                        </a></h4>
                                                </div>
                                                <div {% if loop.index==1 %} class="panel-collapse collapse in" {% else %} class="panel-collapse collapse" {%endif %}id="faq_1_{{key}}">
                                                    <div class="panel-body">
                                                        {{data['answer'][key]}}
                                                    </div>
                                                </div>
                                            {% endfor %}
                                        </div>                                        
                                    </div>
                                </div>
                            {% endfor %}                                               
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% include'user/layout/footer.twig' %}
