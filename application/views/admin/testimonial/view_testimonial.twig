<script type="text/javascript" language="javascript" class="init">

    $(document).ready(function () {
        var oTable = $('#testimonial').DataTable({
            "processing": true,
            "serverSide": true,
            "ajax": "admin/testimonial/testimonial",
            "dataType": "json",
            "type": "POST",
            "data": {'{{ CSRF_TOKEN_NAME }}': '{{ CSRF_TOKEN_VALUE }}'},
            "lengthMenu": [[10, 50,100,500,1000], [10,50,100,500,1000]],
        });
    });
</script>

<span style="display:none;">
    <span id="msg1">{{lang('are_you_sure')}}</span>
    <span id="msg11">{{lang('change_data')}}</span>
    <span id="msg12">{{lang('yes_data_change')}}</span>
    <span id="msg13">{{lang('no_data_change')}}</span>
    <span id="msg2">{{lang('yes_activate')}}</span>
