{% include('admin/layout/header.twig')%}
<div id="js_messages" style="display: none;"> 
    <span id="pls_wt_js">{{lang('pls_wt_js')}}</span>
    <span id="settings_updated_js">{{lang('settings_updated_js')}}</span>
    <span id="succ_js">{{lang('succ_js')}}</span>
    <span id="failed_js">{{lang('failed_js')}}</span>
    <span id="failed_to_update_js">{{lang('failed_to_update_js')}}</span>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-white">
            <div class="panel-heading">
                <h4 class="panel-title">
                    <span class="text-bold">                        
                        {{lang('multi_wallet_config')}}                        
                    </span></h4>
                <div class="panel-tools">
                    <div class="dropdown">
                        <a data-toggle="dropdown" class="btn btn-xs dropdown-toggle btn-transparent-grey"><i class="fa fa-cog"></i></a>
                        <ul class="dropdown-menu dropdown-light pull-right" role="menu">
                            <li><a class="panel-collapse collapses" href="#"><i class="fa fa-angle-up"></i> <span>{{ lang('collapse') }}</span> </a></li>
                            <li><a class="panel-refresh" href="#"><i class="fa fa-refresh"></i> <span>{{ lang('refresh') }}</span></a></li>
                            <li><a class="panel-expand" href="#"><i class="fa fa-expand"></i> <span>{{ lang('full_screen') }}</span></a></li>
                        </ul>
                    </div>
                    <a class="btn btn-xs btn-link panel-close" href="#"><i class="fa fa-times"></i></a>
                </div>
            </div>
            <div class="panel-body">
                <hr>
                {{ form_open('', ' id="multi_wallet" name="multi_wallet"')|raw }}
                <div class="form-horizontal">                                            
                    <div class="errorHandler alert alert-danger no-display">
                        <i class="fa fa-remove-sign"></i> {{ lang('form_error_msg') }}
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">
                            {{lang('menu_name_61')}} ( % ) : <span class="symbol required"></span>
                        </label>
                        <div class="col-sm-3">
                            <input class="form-control" type="text" name="wallet_a" id="wallet_a" value="{{ wallet_percentage['wallet_a']}}">                             
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">
                            {{lang('menu_name_62')}} ( % ) : <span class="symbol required"></span>
                        </label>
                        <div class="col-sm-3">
                            <input class="form-control" type="text" name="wallet_b" id="wallet_b" value="{{ wallet_percentage['wallet_b']}}" readonly>                             
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-3 control-label">

                        </label>
                        <div class="col-sm-4"> 
                            {% if PRESET_DEMO_STATUS %}
                                <button type="button" class="btn btn-primary" onclick="show_notification('warning', $('#operation_blocked').html(), $('#operation_blocked_msg').html())">
                                    {{lang('update')}} <i class="fa fa-arrow-circle-right"></i>
                                </button> 
                            {% else %}                        
                                <button type="sumit"class="btn btn-primary" value="1" name="submit_password">
                                    {{lang('update')}} <i class="fa fa-arrow-circle-right"></i>
                                </button>                       
                            {% endif %}
                        </div>
                    </div>
                </div>


                {{ form_close()|raw }}


            </div>
        </div>
    </div>                                    
</div>

{% include('admin/layout/footer.twig')%}
<script src="assets/js/multi_wallet.js">
</script>
<script>
    jQuery(document).ready(function () {
        changemultiwallet()
    });
</script>