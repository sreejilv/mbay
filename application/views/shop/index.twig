<script>

    function addToCart(product_id) { 
    $.ajax({
        url: "cart/add_to_cart",
        data: {product_id: product_id},
        success: function (res) {
            if (res.trim() == "yes")
            {
                toastr.success('Added to cart')
                $("html,body").animate({scrollTop: 0}, "slow");

                setTimeout(function() {
                    location.reload();
                }, 1000);
            }
            else
            {
                var msg = res;//$('#failed_to_add_js').html();
                toastr.error(msg)
            }
        }
    });

    }

</script>
